<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gree_posting_toolbar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#dcdcdc"
    android:visibility="visible"><LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/gree_photo_stack_bar"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/gree_photo_stack_1"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/gree_image_stack" />
            <ImageView
                android:id="@+id/gree_photo_stack_2"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/gree_image_stack" />
            <ImageView
                android:id="@+id/gree_photo_stack_3"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/gree_image_stack" />
            <ImageView
                android:id="@+id/gree_photo_stack_4"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/gree_image_stack" />
            <ImageView
                android:id="@+id/gree_photo_stack_5"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/gree_image_stack" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/gree_emojiButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/gree_ic_post_emoji" />
            <Button
                android:id="@+id/gree_imageButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/gree_ic_post_photo" />
            <TextView
                android:id="@+id/gree_mood_letter_count"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:focusable="true"
                android:gravity="right"
                android:text="0/0"
                android:textColor="#888888"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>

