<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.gree.platformsample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="net.gree.platformsample.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" /> -->

    <permission
        android:name="net.gree.platformsample.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <application
        android:configChanges="orientation"
        android:icon="@drawable/ic_launcher"
        android:name=".GreePlatformSampleApplication"
        android:label="@string/app_name" >

        <!-- SDK -->
        <activity
            android:configChanges="orientation"
            android:name="net.gree.asdk.core.dashboard.DashboardActivity" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:name="net.gree.asdk.core.notifications.ui.NotificationBoardActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:name="net.gree.asdk.core.dashboard.ModalActivity" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:name="net.gree.asdk.core.notifications.ui.PopupActivity"
            android:noHistory="true"
            android:taskAffinity=""
            android:theme="@style/GreeNotificationDialog" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTask"
            android:name="net.gree.asdk.core.auth.SetupActivity"
            android:theme="@android:style/Theme.Translucent" >
            <intent-filter >
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Make sure to replace XXX by your application id -->
                <data
                    android:host="reopen"
                    android:scheme="greeappXXX" />
            </intent-filter>
            <intent-filter >
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Make sure to replace XXX by your application id -->
                <data
                    android:host="get-accesstoken"
                    android:scheme="greeappXXX" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:name="net.gree.asdk.core.notifications.RelayActivity"
            android:noHistory="true"
            android:taskAffinity="" >
        </activity>
        <activity 
            android:name="net.gree.asdk.core.ui.SSOAuthReceiverActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:launchMode="singleInstance"
            android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="GREEApp/SSOAuthResponse" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.gree.asdk.core.ui.ServiceResultreceiverActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTask"
            android:theme="@android:style/Theme.Translucent" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Make sure to replace XXX by your application id -->
                <data
                    android:host="serviceresponse"
                    android:scheme="greeappXXX" />
            </intent-filter>
        </activity>
        
        <activity android:name="net.gree.asdk.core.dashboard.PostingActivity"
            android:configChanges="orientation" />
        <activity android:name="net.gree.asdk.core.dashboard.SubBrowserActivity"
            android:configChanges="orientation" />
        <activity android:name="net.gree.asdk.core.dashboard.PostingMultipleActivity"
            android:configChanges="orientation" />
        
        <service android:name=".C2DMReceiver" />

        <receiver
            android:name="com.google.android.c2dm.C2DMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter >
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="net.gree.platformsample" /> <!-- This is the registered package name in google cd2m server (different for each appli using push) -->
            </intent-filter>
            <intent-filter >
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="net.gree.platformsample" />
            </intent-filter>
        </receiver>

        <service android:name="com.google.android.c2dm.intent.REGISTER" />

        <receiver
            android:label="NetworkConnection"
            android:name="net.gree.asdk.api.ConnectionChangeReceiver" >
            <intent-filter >
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <!-- Sample App -->
        <activity
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:name=".GreePlatformSampleActivity"
            android:theme="@style/CustomizeTitle" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
             <intent-filter >
                 <action android:name="android.intent.action.VIEW" />
                 <category android:name="android.intent.category.DEFAULT" />
                 <category android:name="android.intent.category.BROWSABLE" />
                 <!-- Make sure to replace XXX by your application id -->
                 <data
                     android:host="start"
                     android:scheme="greeappXXX" />
                 <data
                     android:host="start"
                     android:scheme="greeappopenXXX" />
             </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation"
            android:name=".LeaderBoardListActivity"
            android:theme="@style/CustomizeTitle" />
        <activity
            android:configChanges="orientation"
            android:name=".FriendListActivity"
            android:theme="@style/CustomizeTitle" />
        <activity
            android:configChanges="orientation"
            android:name=".AchievementListActivity"
            android:theme="@style/CustomizeTitle" />
        <activity
            android:configChanges="orientation"
            android:name=".ShareDialogActivity"
            android:theme="@style/CustomizeTitle" />
        <activity
            android:configChanges="orientation"
            android:name=".RequestDialogActivity"
            android:theme="@style/CustomizeTitle" />
        <activity
            android:configChanges="orientation"
            android:name=".InviteDialogActivity"
            android:theme="@style/CustomizeTitle" />
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".PaymentActivity"
            android:theme="@style/CustomizeTitle" />
        <activity
            android:configChanges="orientation"
            android:name="com.example.android.apis.graphics.kube.Kube"
            android:theme="@style/CustomizeTitle" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:name=".HighScoreActivity" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:name=".HighScoreTabActivity"
            android:theme="@style/CustomizeTitle" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:name=".UpgradeActivity"
            android:theme="@style/CustomizeTitle">
        </activity>
    </application>

</manifest>