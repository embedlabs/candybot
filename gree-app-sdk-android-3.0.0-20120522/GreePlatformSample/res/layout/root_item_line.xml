<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true" >

    <ImageView
        android:id="@+id/root_item_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/full_round_rect_grey"
        android:clickable="false"
        android:src="@drawable/noimage_small" />

    <TextView
        android:id="@+id/root_item_name"
        style="@style/one_line_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/root_item_icon"
        android:clickable="false"
        android:text="@string/loading" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:clickable="false"
        android:contentDescription="@string/list_arrow"
        android:src="@drawable/list_arrow" />

</RelativeLayout>
