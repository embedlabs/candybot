<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true" >

    <ImageView
        android:id="@+id/rank_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/full_round_rect_grey"
        android:clickable="false"
        android:src="@drawable/noimage_small" />

    <TextView
        android:id="@+id/rank_name"
        style="@style/two_line_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rank_icon"
        android:layout_toRightOf="@+id/rank_icon"
        android:text="@string/loading"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/rank_score"
        style="@style/two_line_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rank_name"
        android:layout_toRightOf="@+id/rank_icon"
        android:text="@string/loading" />

</RelativeLayout>
