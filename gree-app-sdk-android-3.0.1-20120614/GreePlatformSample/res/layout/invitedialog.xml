<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/app_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/inviteMessage"
            style="@style/content_slim"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Input Invite Message"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/userListText"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:text="UserID:"
                android:textColor="#FF000000" />

            <EditText
                android:id="@+id/userId1Edit"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:gravity="center"
                android:inputType="text" >
            </EditText>

            <EditText
                android:id="@+id/userId2Edit"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:gravity="center"
                android:inputType="text" >
            </EditText>

            <EditText
                android:id="@+id/userId3Edit"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:gravity="center"
                android:inputType="text" >
            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/inviteDialogButton"
            style="@style/content_slim"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/show_invite_popup" />
    </LinearLayout>

    <include
        android:id="@+id/statusBarBottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/gree_status_bar" />

</LinearLayout>
