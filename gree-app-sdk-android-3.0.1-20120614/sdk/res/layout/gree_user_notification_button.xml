<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageButton
        android:contentDescription="@string/gree_content_notification_icon"
        android:id="@+id/gree_notificationBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <FrameLayout
        android:id="@+id/gree_notificationBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@id/gree_notificationBackground">

        <TextView
            android:id="@+id/gree_notificationCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold"
            android:gravity="center"
            android:lines="1"
            android:minWidth="22sp" />
    </FrameLayout>
</RelativeLayout>
