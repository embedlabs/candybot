<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="0dp">

	<RelativeLayout android:layout_width="fill_parent"
		android:id="@+id/relativeLayout1" android:layout_height="wrap_content">

		<Button android:id="@+id/button_buy" android:layout_height="wrap_content"
			android:text="@string/buy_more" android:layout_width="wrap_content"
			android:layout_alignParentRight="true"></Button>
		<TextView android:layout_height="wrap_content"
			android:padding="6dp" android:text="@string/balance_text"
			android:layout_width="wrap_content" android:id="@+id/balance_text"
			android:layout_toLeftOf="@+id/button_buy" android:layout_alignTop="@+id/button_buy"
			android:layout_alignBottom="@+id/button_buy"></TextView>

	</RelativeLayout>

	<ListView android:id="@+id/challenges_list"
		android:layout_width="fill_parent" android:descendantFocusability="blocksDescendants"
		android:layout_height="fill_parent"></ListView>

</LinearLayout>
