<?xml version="1.0" encoding="utf-8"?>
<ViewAnimator xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/enclosing_vf"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:inAnimation="@anim/slide_in_right"
	android:outAnimation="@anim/slide_out_left"
	android:background="@drawable/background_linear">
	<RelativeLayout android:id="@+id/logo_rl"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<ImageView android:id="@+id/logo_iv"
		android:layout_width="854px"
		android:layout_height="480px"
		android:scaleType="fitXY"
		android:src="@drawable/logotrans"
		android:layout_centerInParent="true" />
	</RelativeLayout>
	<RelativeLayout android:id="@+id/loading_rl"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<ImageView android:id="@+id/loading_iv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="center"
			android:src="@drawable/full_candy"
			android:layout_centerInParent="true" />
		<TextView android:id="@+id/loading_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="10dip"
			android:textSize="40dip"
			android:text="@string/loading"
			android:layout_above="@id/loading_iv"
			android:layout_centerHorizontal="true"
			android:textColor="@color/normal_text" />
	</RelativeLayout>
	<LinearLayout android:id="@+id/mainmenu_ll"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:layout_gravity="center_horizontal">
		<TextView android:id="@+id/mainmenu_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="50dip"
			android:text="@string/app_name"
			android:layout_marginTop="20dip"
			android:layout_marginBottom="20dip"
			android:textColor="@color/normal_text" />
		<Button android:id="@+id/button_play"
			style="@style/menuButton"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/button_play"
			android:layout_margin="3dip" />
		<Button android:id="@+id/button_gallery"
			style="@style/menuButton"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/button_gallery"
			android:layout_margin="3dip" />
		<Button android:id="@+id/button_achievements"
			style="@style/menuButton"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/button_achievements"
			android:layout_margin="3dip" />
	</LinearLayout>
</ViewAnimator>
